{"legislative_session": "104th", "identifier": "HB2813", "title": "72-HOUR BUDGET REVIEW ACT", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Creates the 72-Hour Budget Review Act. Prohibits a hearing or vote on any appropriation bill or revenue bill for at least 72 hours after the bill is made publicly available. Provides that a vote on an amendment to an appropriation bill or a revenue bill is not in order unless that amendment is made publicly available within a specified period prior to the vote. Provides that these temporal limitations may be waived by an affirmative two-thirds vote of the full committee or house considering the legislation. Effective immediately."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Norine K. Hammond", "date": "2025-02-05", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "Added Chief Co-Sponsor Rep. Michael J. Coffey, Jr.", "date": "2025-02-05", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "First Reading", "date": "2025-02-06", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-06", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Co-Sponsor Rep. Bradley Fritts", "date": "2025-03-05", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Co-Sponsor Rep. Dave Severin", "date": "2025-03-20", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Co-Sponsor Rep. David Friess", "date": "2025-03-20", "or