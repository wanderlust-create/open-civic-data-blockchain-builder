{"legislative_session": "104th", "identifier": "SB178", "title": "INC TX-SOUNDPROOFING", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Income Tax Act. Creates an income tax credit in an amount equal to the amount paid by the taxpayer during the taxable year for the purpose of purchasing materials, labor, and professional services to soundproof a residential home located at an eligible address against aircraft noise generated by an airport governed by the provisions of the Permanent Noise Monitoring Act. Provides that the credit may not reduce the taxpayer's liability to less than zero. Provides that the credit may be carried forward. Provides that the credit is exempt from the Act's automatic sunset provisions. Effective immediately."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Laura M. Murphy", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Assigned to Revenue", "date": "2025-01-28", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": []}, {"description": "Rule 2-10 Committee Deadline Established As April 11, 2025", "date": "2025-03-21", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Laura M. Murphy", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\"